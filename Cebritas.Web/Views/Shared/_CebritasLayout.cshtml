<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@Url.Content("~/Content/css/base.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/vendor/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/layout.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/modules.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/states.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript">
        @if (Request.IsAuthenticated) {
            @: window.timeZone = @Cebritas.Web.Authentication.Security.SessionManager.GetAuthenticatedUser().TimeZone;
        } else {
            @: window.timeZone = 10; // UTC-4 Bolivia
        }
        window.virtualPath = pathToAction = "@Url.Content("~/Content")/";
    </script>
    <script charset="UTF-8" type="text/javascript" src="http://ecn.dev.virtualearth.net/mapcontrol/mapcontrol.ashx?v=7.0"></script>
</head>
<body>
    @{
        string itemClass1 = "metro-item";
        string itemClass2 = "metro-item";
        string itemClass3 = "metro-item";

    }
     <header id="l-wrapper">
      <div id="l-header">
        <div class="logo">
          <img src="@Url.Content("~/Content/img/logoweb.png")" alt="Cebritas" height="150">
        </div>
        <div class="header-container">
          <div class="login-container">
            <div class="login">
                @Html.Partial("_LogonPartial", new Cebritas.Web.Models.Home.LogonViewModel())
            </div>
          </div>
          <div class="menu-container">
            <ul>
              <li>
                <a class="metro-item is-selected" href="@Url.Content("~/")">
                  <div><img src="@Url.Content("~/Content/img/earth.png")" /><span>What's going on?</span></div>
                </a>
              </li>
              <li>
                <a class="metro-item" href="#">
                  <div><img src="@Url.Content("~/Content/img/help.png")" /><span>Help</span></div>
                </a>
              </li>
              <li>
                <a class="metro-item" href="#">
                  <div><img src="@Url.Content("~/Content/img/cebra_metro.png")" /><span>About</span></div>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      </header>
      <div id="l-main">
      @RenderBody()
      </div>
      <div id="l-footer" class="footer">
        <div>
          Cebritas - 2013
        </div>
      </div>

    <script type="text/javascript" src="@Url.Content("~/Content/js/jquery.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/bootstrap.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/maputils.js")"></script>
    @if (ViewBag.PageName != null) {
        <script type="text/javascript" src="@Url.Content("~/Content/js/mapuser.js")"></script>
    } else {
        <script type="text/javascript" src="@Url.Content("~/Content/js/maps.js")"></script>
    }
    @RenderSection("CustomScripts", false)
</body>
</html>